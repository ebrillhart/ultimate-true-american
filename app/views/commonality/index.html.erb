<!-- ************************************************************************************************* -->
<!-- Commonalities option shows the player two people/things and user guesses what they have in common -->
<!-- the answer can be revealed by clicking the "show answer" button -->
<!-- ************************************************************************************************* -->
<div class="container">
	<div class="row">
		<h1 class="text-center" id="commonalityHeader">What do these two people or things have in common?</h1>
		<div class="col-xs-6 col-xs-offset-3">
			<div class="row">
				<div class="well" id="div1">
					<!-- first commonality added w/ jQuery -->
					<p id="commonality1"></p>
				</div>
			</div>
			<div class="row">
				<div class="well" id="div2">
					<!-- second commonality added w/ jQuery -->
					<p id="commonality2"></p>
				</div>
				<!-- show answer button that reveals the answer -->
				<button class="btn center-block" id="commonalityShow"><a href="#">Show Answer</a></button>
			</div>
			<div class="row">
				<div class="well" id="div3" hidden>
					<!-- answer that's shown when user presses show answer button -->
					<p id="commonalityAnswer"></p>
				</div>
			</div>
			<!-- takes the user back to the game dashboard -->
			<button class="btn center-block" id="commonalityDashboard"><a href="/game/<%= session[:game_id] %>">Back to Dashboard</a></button>
		</div>
	</div>
</div>
