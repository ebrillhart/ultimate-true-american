<!-- two divs, one shown, one hidden, button back to dashboard -->
<div class="container">
	<div class="row">
		<h1 class="text-center" id="quoteHeader">What's the second half of the quote?</h1>
		<div class="col-xs-6 col-xs-offset-3">
			<div class="row">
				<div class="well" id="quoteDiv1">
					<p class="text-center" id="firstHalf"></p>
				</div>
				<button class="btn center-block" id="quoteAnswer"><a href="#">Show Answer</a></button>
			</div>
			<div class="row">
				<div class="well" id="quoteDiv2" hidden>
					<p class="text-center" id="secondHalf"></p>
				</div>	
			</div>
			<div class="row">
				<button class="btn center-block" id="quoteDashboard"><a href="/game/<%= session[:game_id] %>">Back to Dashboard</a></button>
			</div>	
		</div>
	</div>
</div>
