<!-- dashboard of current game with players/aliases, and number of beers they've finished along with a button for taking a turn AND a beer button, delete button for players -->
<div class="container">	
  <div class="row">
    <div class="col-xs-6">
      <div class="row">
    	 <h1 id="gameTitle"><%= @game.title %></h1>
    	 <h2 id="gameDescription"><%= @game.description %></h2>	
      </div>
      <div class="row">
        <button class="btn" id="beerCalculator">We Need How Many Beers?!?</button>
      </div>
      <div class="row">
        <button class="btn" id="gameOver"><a href="/turn/index">Take a Turn</a></button>
      </div>
      <div class="row">
        <button class="btn" id="gameOver"><a href="/profile">Game Over!</a></button>
      </div>
    </div>
    <div class="col xs-6">
    <h2 class="text-center" id="playersHeader">Players</h2>
  	<% @game.player.each do |player| %>
    	<div class="well">
    			<h2><%= player.alias %> <small>(<%= player.username %>)</small></h2>
          <div class="row">
    			 <p><%= player.beers %> beers consumed</p>
           <button id="">Finished a Beer!</button>
          </div>
    	</div>
  	<% end %>
    <!-- sign up trigger -->
    <button class="btn center-block" id="addPlayerBtn"><a data-toggle="modal" href="#addPlayerModal">Add Player</a></button>
    </div>
  </div>
	<!-- sign up modal -->
  <div class="modal fade" id="addPlayerModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Add Player</h4>
        </div>
        <div class="modal-body">
          <%= bootstrap_form_for :player, url: "/players" do |f| %>
          <%= bootstrap_form_for :player, url: game_path do |f| %>
				    <%= f.text_field :username %>
            <%= hidden_field_tag(:game_id, @game.id) %>

				  <%= f.primary 'Add' %>
         <% end %> 
		     <% end %>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>	
