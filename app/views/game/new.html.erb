<!-- ********************************************** -->
<!-- form that allows the user to create a new game -->
<!-- user inputs game title and a description -->
<!-- ********************************************** -->
<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h1 class="text-center" id="newGameHeader">Create a New Game</h1>
		</div>	
	</div>
	<div class="row">
		<!-- new game form -->
		<%= bootstrap_form_for @game, url: game_index_path do |f| %>
			<!-- input game title -->
		  	<%= f.text_field :title %>
		  	<!-- input game description -->
		  	<%= f.text_field :description %>
		  	<!-- create game button -->
		  	<%= f.primary "Create Game", id: "createGameBtn" %>
		<% end %>
		<!-- end of form -->
	</div>
</div>
